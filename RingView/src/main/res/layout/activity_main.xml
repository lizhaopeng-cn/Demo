<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Hello World!"
        android:background="@drawable/bg_ring"/>

    <com.example.ringview.RingView
        android:id="@+id/ringView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#666"
        app:progress="0.5"
        app:ringInnerRadius="75"
        app:ringThickness="25"
        app:clockwise="true"
        app:direction="botton"
        app:ringBackgroundColor="@color/white"
        app:ringColor1="@color/green"/>

</LinearLayout>
