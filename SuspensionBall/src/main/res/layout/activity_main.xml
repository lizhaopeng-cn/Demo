<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suspensionball.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textColor="#f00"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom|right">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="bottom|center_horizontal"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:elevation="10dp"
                app:pressedTranslationZ="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@mipmap/icon_flight_white"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="bottom|center_horizontal"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:elevation="10dp"
                app:pressedTranslationZ="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@mipmap/icon_train_white"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="bottom|center_horizontal"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:elevation="10dp"
                app:pressedTranslationZ="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@mipmap/icon_hotel_white"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="bottom|center_horizontal"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:elevation="10dp"
                app:pressedTranslationZ="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@mipmap/icon_note_white"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="bottom"
                app:borderWidth="0dp"
                app:fabSize="normal"
                android:elevation="10dp"
                app:pressedTranslationZ="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@mipmap/icon_open_white"
                />

        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
